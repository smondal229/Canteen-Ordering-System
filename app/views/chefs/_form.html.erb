<%=  form_for(@chef) do |f|%>
  <%= render(partial: "shared/error_messages", locals: { target: @chef }) %>
  
  <div class="form-group">
    <%= f.label :name,  "Your Name " %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Phone " %>
    <%= f.text_field :phone, class: "form-control", pattern: "[6-9][0-9]{9}", placeholder: "Enter Phone No." %>
  </div>

  <div class="form-group">
    <%= f.label :food_store_id, "Food store Name : " %>
    <%= f.collection_select(:food_store_id, FoodStore.all, :id, :name, { selected: @chef.food_store_id }, class: "form-control") %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary mb-2"  %>
  </div>
<% end %>