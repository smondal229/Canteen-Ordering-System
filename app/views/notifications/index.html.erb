<% if @notifications.count !=0 %>
  <table class = "table mt-3">
    <thead>
      <tr>
        <th>Notification</th>
        <th>Time</th>
      </tr>
    </thead>

    <tbody>
      <% @notifications.each do |notification| %>
        <tr>
          <td><%= notification.content %></td>
          <td><%= notification.created_at.to_formatted_s(:short) %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class= "text-center mt-2">No Notifications yet</div>
<% end %>