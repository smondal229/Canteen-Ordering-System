<% @page_title = "View Orders" %>

<% @orders.each do |order| %>
  <table class = "table mt-3 mb-5">
    <thead>
      <tr class = "table-info">
        <th colspan="4"><%= "Order to : #{ order.food_store.try(:name) }" %></th>
      </tr>
      <tr class = "table-info">
        <th colspan="4"><%= "Placed At : #{ order.placed_at.to_formatted_s(:long) }" %></th>
      </tr>
      <tr>
        <th>Food name</th>
        <th>Quantity</th>
        <th>Extra preferences</th>
        <th>Total price</th>
      </tr>
    </thead>

    <tbody>
      <% order.cart_items.each do |item| %>
        <tr>
          <td><%= item.food.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.description %></td>
          <td><%= "#{ item.food.price } X #{ item.quantity } = #{ item.food.price*item.quantity }" %></td>
        </td>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <th colspan="3">Total : </th>
        <td><%= order.total_price %></th>
      </tr>
      <tr>
        <% if order.status.nil? %>
          <th colspan="4"><%= "Status : Pending" %></th>
        <% else %>
          <th colspan="2"><%= "Status : #{ order.status.name }" %></th>
          <% if !order.delivered_at.nil? %>
            <th colspan="2"><%= "Delivered At : #{ order.delivered_at.to_formatted_s(:long) }" %></th>
          <% else %>
            <th colspan = "2"></th>
          <% end %>
        <% end %>
      </tr>
    </tfoot>
  </table>

<% end %>
