<% if @message.errors.any? %>
  $('.error-container').html("<%= j render(partial: 'shared/error_messages', locals: { target: @message }) %>");
<% else %>
  $('.error-container').html("");

  sent_message = "<%= j render(partial: 'message', locals: { message: @message }) %>"
  $("[data-messages='<%= @message.sendable_type %><%= @message.sendable_id %>']").prepend(sent_message)

  $("#message_body").val('');
<% end %>