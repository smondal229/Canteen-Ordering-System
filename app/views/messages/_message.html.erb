<% if message.sendable == (current_employee || current_chef) %>
  <li class = "list-group-item sent">
    <div class = "text-right">
      <strong><%= message.sendable.email + " : "%></strong>
      <span><%= message.body %></span>
    </div>
    <div>  
      <span class = "d-block text-info text-right"><%= message.get_datetime %></span>
    </div>
  </li>
<% else %>
  <li class = "list-group-item recieved">
    <strong><%= message.sendable.email + " : "%></strong>
    <span><%= message.body %></span>
    <span class = "d-block text-info text-right"><%= message.get_datetime %></span>
  </li>
<% end %>