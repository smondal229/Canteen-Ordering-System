<%=  form_for(@employee) do |f|%>
  <%= render(partial: "shared/error_messages", locals: { target: @employee }) %>
  
  <div class="form-group">
    <%= f.label :name,  "Your Name " %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Phone " %>
    <%= f.text_field :phone, class: "form-control", pattern: "[6-9][0-9]{9}", placeholder: "Enter Phone No." %>
  </div>

  <div class="form-group">
    <%= f.label :company_id, "Company Name : " %>
    <%= f.collection_select(:company_id, Company.all, :id, :name, { selected: @employee.company_id , prompt: "Select a company" }, class: "form-control") %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary mb-2"  %>
  </div>
<% end %>