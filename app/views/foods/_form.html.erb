<%= form_for(@food) do |f| %>
  <%= render(partial: "shared/error_messages", locals: { target: @food }) %>

  <%= f.hidden_field :food_store_id, value: @food.food_store_id %>
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field(:name, class: "form-control", placeholder: "Enter food name") %>
  </div>

  <div class = "form-group">
    <%= f.label :price, "Price" %>
    <%= f.number_field(:price, class: "form-control", placeholder: "Enter Price", min: 0) %>
  </div>

  <div class = "form-group">
    <%= f.collection_select(:category_id, Category.order_by_name, :id, :name, { prompt: "Select a Category" }, class: "form-control") %>
  </div>
  
  <div>
    <%= f.submit("Submit", class: "btn btn-primary") %>
  </div>
<% end %>